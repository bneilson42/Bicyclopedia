<% if user_signed_in? && @wiki.user == current_user %>
<div class="col-sm-7">
  <div class="page-header">
    <h1><%= @wiki.title %></h1>
    <h4 style="display:inline; vertical-align:middle;"><%= @wiki.user.name %></h4>
    <%= link_to 'Edit', edit_wiki_path(@wiki), class: 'btn btn-sm btn-default' %>
    <%= link_to 'Delete', wiki_path(@wiki), method: :delete, class: 'btn btn-sm btn-danger', confirm: 'Are you sure you want to delete wiki?' %>
  </div>
  <%= markdown @wiki.body %>
</div>
<div class="col-sm-5">
  <h3>Add Collaborators</h3>
  <%# render template: 'wiki_collaborations/add_or_remove', locals: { wiki: @wiki } %>
</div>
<% else %>
<div class="col-sm-12">
  <div class="page-header">
    <h1><%= @wiki.title %></h1>
    <h4><%= @wiki.user.name %></h4>
  </div>
  <%= markdown @wiki.body %>
</div>
<% end %>
