<% if user_signed_in? && @wiki.user == current_user %>
<div class="col-sm-7">
  <div class="page-header">
    <%= link_to 'Edit', edit_wiki_path(@wiki), class: 'btn btn-md btn-primary' %>
    <%= link_to 'Delete', @wiki, method: :delete, class: 'btn btn-md btn-danger', confirm: 'Are you sure you want to delete wiki?' %>
    <h1><%= @wiki.title %></h1>
  </div>
  <%= markdown @wiki.body %>
</div>
<div class="col-sm-5">
  <h3>Add Collaborators</h3>
  <%= render partial: 'collaborations/form' %>
</div>
<% else %>
<div class="col-sm-12">
  <div class="page-header">
    <h1><%= @wiki.title %></h1>
  </div>
  <%= markdown @wiki.body %>
</div>
<% end %>
